<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.project</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="50" />
            <field name="inherit_id" ref="project.res_config_settings_view_form" />
            <field name="arch" type="xml">
            <xpath expr="//block[@name='project_time']" position="after">
                <block title="Project extra settings" name="project_template_settings">
                    <setting id="note_tasks_setting" help="Allow copying task notes values to the new project">
                        <field name="allow_task_notes_copy" />
                    </setting>
                </block>
            </xpath>

            </field>
        </record>
</odoo>
