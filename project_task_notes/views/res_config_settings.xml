<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.project</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="50" />
            <field name="inherit_id" ref="project.res_config_settings_view_form" />
            <field name="arch" type="xml">
            <xpath expr="//div[@name='project_time']" position="after">
                <h2>Extra Settings</h2>
                <div
                    class="row mt16 o_settings_container"
                    name="project_template_settings"
                >

                    <div class="col-12 col-lg-6 o_setting_box" id="note_tasks_setting">
                        <div class="o_setting_left_pane">
                            <field name="allow_task_notes_copy" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="allow_task_notes_copy" />
                            <div class="text-muted">
                                Allow copying task notes values to the new project
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

            </field>
        </record>
</odoo>
