<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="task_to_opportunity_view_form" model="ir.ui.view">
        <field name="name">task.to.opportunity.form</field>
        <field name="model">task.to.opportunity</field>
        <field name="arch" type="xml">
            <form string="Create an Opportunity">
                <group>
                    <field name="partner_id" />
                    <field name="user_id" />
                    <field name="name" />
                    <field name="description" />
                </group>

                <footer>
                    <button
                        name="create_opportunity"
                        string="Create an Opportunity"
                        type="object"
                        class="btn btn-sm btn-primary"
                    />
                    <button
                        string="Cancel"
                        class="btn btn-sm btn-default"
                        special="cancel"
                    />
                </footer>
            </form>
        </field>
    </record>
</odoo>
