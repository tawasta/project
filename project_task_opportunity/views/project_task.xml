<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Action for creating an opportunity -->
    <record id="act_task_to_opportunity" model="ir.actions.act_window">
        <field name="name">Create an Opportunity</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">task.to.opportunity</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
        <field name="binding_model_id" ref="project.model_project_task" />
    </record>

    <record id="view_task_form2" model="ir.ui.view">
        <field name="name">project.task.form.view</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="lead_ids" widget="many2many_tags" />
            </field>
        </field>
    </record>

</odoo>
