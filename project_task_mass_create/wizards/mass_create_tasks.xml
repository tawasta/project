<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mass_create_tasks_form" model="ir.ui.view">
        <field name="name">mass.create.tasks.form</field>
        <field name="model">mass.create.tasks</field>
        <field name="arch" type="xml">
            <form string="Mass create tasks">
                <group>
                    <field name="project_id" />
                    <field name="task_date_deadline" />
                    <field name="task_tag_ids" widget="many2many_tags" />
                    <field name="task_user_id" />
                    <field name="task_description" />

                    <field name="task_prefix" />
                    <field name="task_suffix" />
                    <field name="tasks_string" />
                    <field name="tasks_todo" />
                </group>

                <footer>
                    <button
                        name="create_tasks"
                        string="Create tasks"
                        type="object"
                        class="btn btn-sm btn-primary"
                    />
                    <button
                        string="Cancel"
                        class="btn btn-sm btn-default"
                        special="cancel"
                    />
                </footer>
            </form>
        </field>
    </record>
</odoo>
