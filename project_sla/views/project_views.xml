<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_task_search_form_sla" model="ir.ui.view">
        <field name="name">project.task.search.form.sla</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form" />
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field name="sla_id" />
            </field>
        </field>
    </record>
    <record id="view_task_form2_sla" model="ir.ui.view">
        <field name="name">project.task.form.sla</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field
                    name="sla_id"
                    options="{'color_field': 'color', 'no_create': True, 'no_create_edit': True, 'no_open': True}"
                />
            </field>
        </field>
    </record>
    <record id="view_task_tree2_sla" model="ir.ui.view">
        <field name="name">project.task.tree.sla</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2" />
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field name="sla_id" optional="show" />
            </field>
        </field>
    </record>
    <!-- SLA -->
    <record model="ir.ui.view" id="project_sla_search_view">
        <field name="name">Service-Level Agreements</field>
        <field name="model">project.sla</field>
        <field name="arch" type="xml">
            <search string="Service-Level Agreements">
                <field name="name" string="Service-Level Agreement" />
                <field name="code" />
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="project_sla_form_view">
        <field name="name">Service-Level Agreements</field>
        <field name="model">project.sla</field>
        <field name="arch" type="xml">
            <form string="Service-Level Agreements">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="code" />
                        <field name="description" />
                        <field name="color" widget="color_picker" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="project_sla_tree_view">
        <field name="name">Service-Level Agreements</field>
        <field name="model">project.sla</field>
        <field name="arch" type="xml">
            <tree string="Service-Level Agreements" sample="1">
                <field name="name" />
                <field name="code" />
                <field name="description" optional="hide" />
                <field name="color" widget="color_picker" />
            </tree>
        </field>
    </record>
    <record id="project_sla_action" model="ir.actions.act_window">
        <field name="name">Service-Level Agreements</field>
        <field name="res_model">project.sla</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No service-level agreements found. Let's create one!
            </p>
            <p>
                Service-level agreements are a great way to define your tasks service level.
            </p>
        </field>
    </record>
    <menuitem
        action="project_sla_action"
        id="menu_project_sla_act"
        parent="project.menu_project_config"
    />
</odoo>
