<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="project_task_form" model="ir.ui.view">
        <field name="name">project.task.form: Show Task code</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project_task_dependency.project_task_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='dependency_task_ids']/tree/field[@name='name']"
                position="before"
            >
                <field name="code" />
            </xpath>
        </field>
    </record>
</odoo>
