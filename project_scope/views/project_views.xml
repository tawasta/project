<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_task_search_form_scope" model="ir.ui.view">
        <field name="name">project.task.search.form.scope</field>
        <field name="model">project.task</field>
        <field name="priority">10</field>
        <field name="inherit_id" ref="project.view_task_search_form" />
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field name="scope_id" />
            </field>
        </field>
    </record>
    <record id="view_task_form2_scope" model="ir.ui.view">
        <field name="name">project.task.form.scope</field>
        <field name="model">project.task</field>
        <field name="priority">10</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field
                    name="scope_id"
                    options="{'color_field': 'color', 'no_create': True, 'no_create_edit': True, 'no_open': True}"
                />
            </field>
        </field>
    </record>
    <record id="view_task_tree2_scope" model="ir.ui.view">
        <field name="name">project.task.tree.scope</field>
        <field name="model">project.task</field>
        <field name="priority">10</field>
        <field name="inherit_id" ref="project.view_task_tree2" />
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field name="scope_id" optional="hide" />
            </field>
        </field>
    </record>
    <!-- Scope -->
    <record model="ir.ui.view" id="project_scope_search_view">
        <field name="name">Scopes</field>
        <field name="model">project.scope</field>
        <field name="arch" type="xml">
            <search string="Scopes">
                <field name="name" string="Scopes" />
                <field name="code" />
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="project_scope_form_view">
        <field name="name">Scopes</field>
        <field name="model">project.scope</field>
        <field name="arch" type="xml">
            <form string="Scopes">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="code" />
                        <field name="description" />
                        <field name="color" widget="color_picker" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="project_scope_tree_view">
        <field name="name">Scopes</field>
        <field name="model">project.scope</field>
        <field name="arch" type="xml">
            <tree string="Scopes" sample="1">
                <field name="name" />
                <field name="code" />
                <field name="description" optional="hide" />
                <field name="color" widget="color_picker" />
            </tree>
        </field>
    </record>
    <record id="project_scope_action" model="ir.actions.act_window">
        <field name="name">Scopes</field>
        <field name="res_model">project.scope</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No scopes found. Let's create one!
            </p>
            <p>
                Scopes are a great way to define your tasks scope.
            </p>
        </field>
    </record>
    <menuitem
        action="project_scope_action"
        id="menu_project_scope_act"
        parent="project.menu_project_config"
    />
</odoo>
