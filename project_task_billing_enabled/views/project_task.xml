<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_task_search_form_billing" model="ir.ui.view">
        <field name="name">project.task.search.form.billing</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form" />
        <field name="arch" type="xml">
            <filter name="rating_task" position="after">
                <filter
                    string="Billing"
                    name="billing"
                    domain="[('billing_enabled', '=', True)]"
                />
            </filter>
            <search position="inside">
                <field name="sale_order_ref" />
                <field name="invoice_date" />
            </search>
        </field>
    </record>
    <record id="view_task_form2_billing" model="ir.ui.view">
        <field name="name">project.task.form.billing</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <field name="partner_phone" position="after">
                <field name="billing_enabled" />
                <field name="sale_order_ref" />
                <field name="invoice_date" />
            </field>
        </field>
    </record>
    <record id="view_task_tree2_billing" model="ir.ui.view">
        <field name="name">project.task.tree.billing</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2" />
        <field name="arch" type="xml">
            <field name="date_deadline" position="after">
                <field name="billing_enabled" optional="hide" />
                <field name="sale_order_ref" optional="hide" />
                <field name="invoice_date" optional="hide" />
            </field>
        </field>
    </record>
</odoo>
